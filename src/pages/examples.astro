---
/**
 * EXAMPLE: How to Use the Design System
 * 
 * This file demonstrates practical usage of the unified design system.
 * Copy these patterns for your own pages and components.
 */
import Layout from '../layouts/Layout.astro';
import TechSection from '../components/TechSection.astro';
import TechText from '../components/TechText.astro';
import TechLink from '../components/TechLink.astro';
import TechTag from '../components/TechTag.astro';
import ProjectCard from '../components/ProjectCard.astro';
import ExperienceCard from '../components/ExperienceCard.astro';
---

<Layout title="Design System Examples">
  <div class="min-h-screen bg-tech-bg">
    <div class="container mx-auto px-4 py-12 max-w-5xl">
      
      <!-- Example 1: Hero Section with Command Prompt -->
      <TechSection>
        <div class="text-text-dim text-sm mb-2">~/examples/hero</div>
        <TechText variant="h1">
          <span class="tech-prompt">introduction</span>
        </TechText>
        <div class="tech-indent space-y-4">
          <TechText variant="body">
            Welcome to the unified design system! This page demonstrates common patterns.
          </TechText>
        </div>
      </TechSection>

      <!-- Example 2: Section with Title and Bullet -->
      <TechSection title="Typography Examples" bulletType="primary">
        <div class="tech-indent space-y-4">
          <TechText variant="h2">This is an H2 heading</TechText>
          <TechText variant="h3">This is an H3 heading (cyan)</TechText>
          <TechText variant="body">
            This is body text with normal styling.
          </TechText>
          <TechText variant="muted">
            This is muted text for less important information.
          </TechText>
          <TechText variant="tree-branch">
            This text has a tree branch symbol (┖)
          </TechText>
        </div>
      </TechSection>

      <!-- Example 3: Technology Tags -->
      <TechSection title="Tech Stacks" bulletType="secondary">
        <div class="tech-indent space-y-6">
          <div>
            <TechText variant="h3">Primary Accent Tags</TechText>
            <div class="flex flex-wrap gap-2 mt-3">
              <TechTag>React</TechTag>
              <TechTag>TypeScript</TechTag>
              <TechTag>Node.js</TechTag>
              <TechTag>Docker</TechTag>
            </div>
          </div>

          <div>
            <TechText variant="h3">Muted Style Tags</TechText>
            <div class="flex flex-wrap gap-2 mt-3">
              <TechTag variant="muted">Python</TechTag>
              <TechTag variant="muted">PostgreSQL</TechTag>
              <TechTag variant="muted">AWS</TechTag>
            </div>
          </div>
        </div>
      </TechSection>

      <!-- Example 4: Links -->
      <TechSection title="Links & Navigation" bulletType="success">
        <div class="tech-indent flex flex-col gap-3">
          <div>
            <TechText variant="body" class="mb-2">Basic links:</TechText>
            <TechLink href="#">Regular link</TechLink>
          </div>

          <div>
            <TechText variant="body" class="mb-2">Links with arrow prefix:</TechText>
            <TechLink href="#" arrow>Link with arrow</TechLink>
          </div>

          <div>
            <TechText variant="body" class="mb-2">External links:</TechText>
            <TechLink href="https://github.com" external arrow>
              github.com/username
            </TechLink>
          </div>
        </div>
      </TechSection>

      <!-- Example 5: Cards with Tech Card Class -->
      <TechSection title="Card Components" bulletType="primary">
        <TechText variant="body" class="mb-4">
          Cards use the .tech-card class for consistent styling with hover effects.
        </TechText>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="tech-card">
            <TechText variant="h3">Feature Card</TechText>
            <TechText variant="body" class="mt-2 mb-4">
              Tech-styled card with automatic borders and hover effects.
            </TechText>
            <div class="flex gap-2">
              <TechTag>React</TechTag>
              <TechTag>Tailwind</TechTag>
            </div>
          </div>

          <div class="tech-card">
            <TechText variant="h3">Info Card</TechText>
            <TechText variant="muted" class="mt-2 mb-4">
              Cards are perfect for displaying projects, features, or any grouped content.
            </TechText>
            <div class="flex gap-2">
              <TechTag variant="muted">Node.js</TechTag>
              <TechTag variant="muted">Docker</TechTag>
            </div>
          </div>
        </div>
      </TechSection>

      <!-- Example 6: Status Indicators -->
      <TechSection title="Status Indicators">
        <div class="tech-indent space-y-4">
          <div class="flex items-center gap-3">
            <span class="status-active">●</span>
            <TechText variant="body">Active status (green)</TechText>
          </div>
          <div class="flex items-center gap-3">
            <span class="status-inactive">●</span>
            <TechText variant="body">Inactive status (blue)</TechText>
          </div>
          <div class="flex items-center gap-3">
            <span class="tech-bullet-success">●</span>
            <TechText variant="body">Success bullet (green)</TechText>
          </div>
        </div>
      </TechSection>

      <!-- Example 7: Responsive Grid Layout -->
      <TechSection title="Responsive Layouts" bulletType="secondary">
        <TechText variant="body" class="mb-4">
          Grid automatically adjusts: 1 column on mobile, 2 on tablet, 3 on desktop.
        </TechText>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <div class="tech-card">
            <TechText variant="h3">Column 1</TechText>
            <TechText variant="muted" class="mt-2">Responsive card layout</TechText>
          </div>
          <div class="tech-card">
            <TechText variant="h3">Column 2</TechText>
            <TechText variant="muted" class="mt-2">Adapts to screen size</TechText>
          </div>
          <div class="tech-card">
            <TechText variant="h3">Column 3</TechText>
            <TechText variant="muted" class="mt-2">Clean and consistent</TechText>
          </div>
        </div>
      </TechSection>

      <!-- Example 8: Direct CSS Classes -->
      <TechSection title="Using CSS Classes Directly">
        <div class="tech-indent space-y-4">
          <p class="tech-text">
            You can also use the CSS classes directly without components.
          </p>
          <p class="tech-text-muted">
            This is useful for simple text that doesn't need component props.
          </p>
          <div class="flex gap-2">
            <span class="tech-tag">Direct</span>
            <span class="tech-tag-muted">CSS</span>
            <span class="tech-tag">Classes</span>
          </div>
          <a href="#" class="tech-link-arrow">Link with arrow class</a>
        </div>
      </TechSection>

      <!-- Example 9: ProjectCard Component -->
      <TechSection title="ProjectCard Component" bulletType="primary">
        <TechText variant="body" class="mb-4">
          The ProjectCard component displays projects as cards with tech stacks and optional links.
        </TechText>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <ProjectCard
            title="Personal Portfolio Website"
            description="Modern portfolio built with Astro, featuring a tech-inspired design system, blog functionality, and Docker deployment"
            technologies={["Astro", "TypeScript", "Tailwind", "Docker"]}
            link="https://example.com"
            github="https://github.com/ironwithout/profile"
          />
          <ProjectCard
            title="API Gateway Service"
            description="Microservices authentication gateway with JWT validation and rate limiting"
            technologies={["Node.js", "Express", "Redis", "PostgreSQL"]}
            github="https://github.com/example/api-gateway"
          />
          <ProjectCard
            title="Real-time Analytics Dashboard"
            description="Live metrics dashboard processing streaming data with interactive visualizations"
            technologies={["React", "WebSocket", "D3.js", "Python"]}
            link="https://example.com/dashboard"
          />
        </div>
      </TechSection>

      <!-- Example 10: ExperienceCard Component -->
      <TechSection title="ExperienceCard Component" bulletType="secondary">
        <div class="tech-indent">
          <TechText variant="body" class="mb-4">
            The ExperienceCard component displays work experience with achievements and tech stack.
          </TechText>
          <ExperienceCard
            company="Example Corp"
            role="Senior Developer"
            period="2023 → Present"
            location="Remote"
            status="current"
            description="Leading development of scalable web applications"
            achievements={[
              "Built microservices platform serving 50K+ users",
              "Reduced API latency by 40% through optimization",
              "Mentored team of 3 junior developers"
            ]}
            technologies={["React", "Node.js", "AWS", "Docker"]}
            index={0}
            defaultExpanded={true}
          />
        </div>
      </TechSection>

    </div>
  </div>
</Layout>
