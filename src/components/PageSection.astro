---
/**
 * Page Section wrapper for snap scrolling layout
 * Handles the section container, animation classes, and scroll indicator integration
 */
interface Props {
  sectionIndex: number;
}

const { sectionIndex } = Astro.props;
---

<section 
  class="snap-start min-h-screen flex items-center"
  data-section={sectionIndex}
>
  <div class="container mx-auto px-4 py-12 max-w-5xl section-content">
    <slot />
  </div>
</section>
