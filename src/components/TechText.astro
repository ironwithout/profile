---
/**
 * Reusable text component with Tech styling variants
 * Usage: <TechText variant="h1">Your text</TechText>
 */
type Variant = 'h1' | 'h2' | 'h3' | 'body' | 'muted' | 'tree-branch';

interface Props {
  variant?: Variant;
  class?: string;
}

const props = Astro.props as Props;
const variant = props.variant ?? 'body';
const className = props.class ?? '';

const variantClasses: Record<Variant, string> = {
  h1: 'tech-h1',
  h2: 'tech-h2',
  h3: 'tech-h3',
  body: 'tech-text',
  muted: 'tech-text-muted',
  'tree-branch': 'tech-tree-branch tech-text',
};

const classes = `${variantClasses[variant]} ${className}`;
---

{variant === 'h1' && <h1 class={classes}><slot /></h1>}
{variant === 'h2' && <h2 class={classes}><slot /></h2>}
{variant === 'h3' && <h3 class={classes}><slot /></h3>}
{variant === 'body' && <p class={classes}><slot /></p>}
{variant === 'muted' && <p class={classes}><slot /></p>}
{variant === 'tree-branch' && <div class={classes}><slot /></div>}
