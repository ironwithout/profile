---
/**
 * Reusable link component
 * Usage: <Link href="..." arrow>Link text</Link>
 */
interface Props {
  href: string;
  arrow?: boolean;
  external?: boolean;
  class?: string;
}

const { href, arrow = false, external = false, class: className = '' } = Astro.props;

const externalProps = external ? {
  target: '_blank',
  rel: 'noopener noreferrer'
} : {};

const linkClass = arrow ? 'tech-link-arrow' : 'tech-link';
---

<a 
  href={href} 
  class={`${linkClass} ${className}`}
  {...externalProps}
>
  <slot />
</a>
