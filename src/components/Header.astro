---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/professional', label: 'Professional' },
  { href: '/personal', label: 'Personal' },
  { href: '/blog', label: 'Blog' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-gray-900 border-b-2 border-gray-800 font-mono">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-xl font-semibold text-emerald-400 hover:text-emerald-300 transition-colors">
        <span class="text-gray-600">~</span>/miguel-sanchez
      </a>
      <ul class="flex gap-6 text-sm">
        {navItems.map(({ href, label }) => (
          <li>
            <a 
              href={href}
              class:list={[
                "hover:text-cyan-400 transition-colors",
                currentPath === href ? "text-cyan-400" : "text-gray-400"
              ]}
            >
              {currentPath === href && <span class="text-emerald-400">$ </span>}{label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>
