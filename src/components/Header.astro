---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/professional', label: 'Professional' },
  { href: '/personal', label: 'Personal' },
  { href: '/blog', label: 'Blog' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-terminal-surface border-b-2 border-terminal-border font-mono">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-xl font-semibold text-accent-primary hover:text-accent-secondary transition-colors uppercase tracking-wider">
        Miguel Sánchez
      </a>
      <ul class="flex gap-6 text-sm">
        {navItems.map(({ href, label }) => (
          <li>
            <a 
              href={href}
              class:list={[
                "hover:text-accent-primary transition-colors uppercase tracking-wide",
                currentPath === href ? "text-accent-primary" : "text-text-muted"
              ]}
            >
              {currentPath === href && <span class="text-accent-success">● </span>}{label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>
