---
import TerminalText from './TerminalText.astro';
import TerminalLink from './TerminalLink.astro';
import TechTag from './TechTag.astro';

interface Props {
  title: string;
  description: string;
  technologies: string[];
  link?: string;
  github?: string;
}

const { title, description, technologies, link, github } = Astro.props;
---

<div class="terminal-card">
  <TerminalText variant="h3">{title}</TerminalText>
  <TerminalText variant="body" class="mt-2 mb-4">{description}</TerminalText>
  <div class="flex gap-2">
    {technologies.map(tech => (
        <TechTag>{tech}</TechTag>
      ))}
  </div>

  {(link || github) && (
    <div class="flex gap-4 pt-2">
      {link && (
        <TerminalLink href={link} external arrow>
          Live Demo
        </TerminalLink>
      )}
      {github && (
        <TerminalLink href={github} external arrow>
          Source
        </TerminalLink>
      )}
    </div>
  )}
</div>
