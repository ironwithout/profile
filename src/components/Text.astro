---
/**
 * Reusable text component with styling variants
 * Usage: <Text variant="h1">Your text</Text>
 */
type Variant = 'h1' | 'h2' | 'h3' | 'body';

interface Props {
  variant: Variant;
  class?: string;
}

const { variant, class: className = '' } = Astro.props;

const variantClasses: Record<Variant, string> = {
  h1: 'tech-h1',
  h2: 'tech-h2',
  h3: 'tech-h3',
  body: 'tech-text',
};

const classes = `${variantClasses[variant]} ${className}`;
---

{variant === 'h1' && <h1 class={classes}><slot /></h1>}
{variant === 'h2' && <h2 class={classes}><slot /></h2>}
{variant === 'h3' && <h3 class={classes}><slot /></h3>}
{variant === 'body' && <p class={classes}><slot /></p>}
